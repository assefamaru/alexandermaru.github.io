<style>
    #mfooter {
        display: none;
    }
</style>

<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="#">
                    Menu
                </a>
            </li>
            <li><%= link_to "Full Bible",             bible_path %></li>
            <li><%= link_to "Ethiopian Orthodox History",             history_path %></li>
            <li><%= link_to "Lessons for Kids",             kids_path %></li>
            <li><%= link_to "Religious Lessons",             religion_path %></li>
        </ul>
    </div><!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid" id="cont-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="menu-sub">
                        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">
                            <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                        </a>
                    </div>
                    <div class="content-sub">
                        <h1>Full Bible</h1>
                        <p id="identity1">You can read through the full King James Bible below.</p>
                        <!-- Embedded Bible. https://biblia.com/plugins/embeddedbible -->
                        <biblia:bible layout="minimal" resource="kjv1900" width="100%" height="600" startingReference="Ge1.1"></biblia:bible>
                        <div class="search-container">
                            <div class="bible-search">
                                <!-- Bible Search Box. https://biblia.com/plugins/BibleSearchBox -->
                                <biblia:biblesearchbox style="dark" size="large" width="300" height="135" resource="kjv1900"></biblia:biblesearchbox>
                                <!-- If youâ€™re including multiple Biblia widgets, you only need this script tag once -->
                                <script src="//biblia.com/api/logos.biblia.js"></script>
                                <script>logos.biblia.init();</script>
                            </div>
                        </div>
                    </div><!-- end of content-sub -->
                </div>
            </div>
        </div>
    </div>
</div><!-- /#wrapper -->


    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
